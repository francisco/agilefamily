<div class="signerin">
  <h2 class="form-signin-heading">Sign Up</h2>
  <%= form_for(resource, :as => resource_name, class: "form-signin", :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.email_field :email, :autofocus => true, class: "form-control", "placeholder" => "Email Address"  %></div><br />
    <div><%= f.text_field :name, class: "form-control", "placeholder" => "Name" %></div><br />

    <div><%= f.text_field :phone, class: "form-control", "placeholder" => "Phone" %><small>(Only used for weekly meeting reminders)</small></div><br />

    <div><%= f.text_field :age, class: "form-control", "placeholder" => "Age" %></div><br />

    <div>
    <%= f.password_field :password, class: "form-control", "placeholder" => "Password" %></div><br />

    <div>
    <%= f.password_field :password_confirmation, class: "form-control", "placeholder" => "Password Confirmation" %></div><br />

    <div><%= f.submit "Sign up", class: "btn btn-primary" %></div><br />
  <% end %>

  <%= render "devise/shared/links" %>
</div>
