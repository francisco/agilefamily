<h1>Tasker</h1>

<div ng-controller="RaffleCtrl">
  <form ng-submit="addTask()">
    <input type="text" ng-model="newTask.name">
    <input type="submit" value="Add">
  </form>

  <ul>
    <li ng-repeat="task in tasks">
      {{task.name}}
      <span ng-show="task.winner" ng-class="{highlight: task == lastWinner}" class="winner">WINNER</span>
    </li>
  </ul>

  <button ng-click="drawWinner()">Draw Winner</button>
</div>